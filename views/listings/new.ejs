<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a new listing</h3>
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <b><label for="title" class="form-label">Title</label></b>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add a catcy title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks goods</div>
        </div>
        <div class="mb-3">
          <b><label for="description" class="form-label">Description</label></b>
          <textarea
            name="listing[description]"
            id=""
            placeholder="Enter description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Price enter a short description</div>
        </div>
        <!-- <div class="mb-3">
          <b><label for="image" class="form-label">Image Link</label></b>
          <input
            type="text"
            name="listing[image]"
            placeholder="Enter image URL"
            class="form-control"
          />
        </div> -->
        <div class="mb-3">
          <b><label for="image" class="form-label">Upload Image</label></b>
          <input
            type="file"
            name="listing[image]" 
            class="form-control"
            required
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <b><label for="price" class="form-label">Price</label></b>
            <input
              type="text"
              name="listing[price]"
              placeholder="1234 "
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <b><label for="country" class="form-label">Country</label></b>
            <input
              type="text"
              name="listing[country]"
              placeholder="Pakistan"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>
        <div class="mb-3">
          <b><label for="location" class="form-label">Location</label></b>
          <input
            type="text"
            name="listing[location]"
            placeholder="Lahore, Punjab"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <br />
        <button class="btn btn-dark add-btn" class="mb-3">Add</button
        ><br /><br />
      </form>
    </div>
  </div>

</body>
